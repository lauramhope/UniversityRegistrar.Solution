            <li class="list-inline-item"><a class="text-white" href="/">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    @RenderBody()

    <section class="bg-light py-5">
      <div class="container">
        <h2>Our Programs</h2>
        <div class="row">
          <div class="col-md-4">
            <div class="card mb-3"
              <img src="path/to/program.jpg" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Program 1</h5>
                <p class="card-text">akjdbclajbvkwejbv</p>
                <a href="#" class="btn btn-primary">Learn More</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-3"
              <img src="path/to/program.jpg" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Program 2</h5>
                <p class="card-text">akjdbclajbvkwejbv</p>
                <a href="#" class="btn btn-primary">Learn More</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-3"
              <img src="path/to/program.jpg" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Program 3</h5>
                <p class="card-text">akjdbclajbvkwejbv</p>
                <a href="#" class="btn btn-primary">Learn More</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5">
      <div class="container">
        <h2>Contact us</h2>
        <p>If you have any questions or inquiries, please contact us.</p>
        <form>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
          </div>
          <div class="col-md-6 mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
          </div>
          <div class="col-md-6 mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" rows="5" placeholder="Enter your message" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </section>

    @await Html.PartialAsync("Footer")
  </body>
</html>